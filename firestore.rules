rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if the user document exists in Firestore
    function userExists(email) {
      return exists(/databases/$(database)/documents/users/$(email));
    }

    // Get user data from Firestore (only call if userExists)
    function getUserData(email) {
      return get(/databases/$(database)/documents/users/$(email)).data;
    }

    // Get current user's role
    function getUserRole() {
      return userExists(request.auth.token.email) ? getUserData(request.auth.token.email).role : 'user';
    }

    // Check if user is super admin
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'super_admin';
    }

    // Check if user is admin or super admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() in ['admin', 'super_admin'];
    }
    
    // Check if user is member or admin
    function isMemberOrAdmin() {
      return isAuthenticated() && getUserRole() in ['member', 'admin', 'super_admin'];
    }

    // Rules for the 'users' collection
    match /users/{email} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        // Users can update their own document
        request.auth.token.email == email ||
        // Admins can update any user (check if requester's doc exists and they're admin)
        (userExists(request.auth.token.email) && getUserData(request.auth.token.email).role in ['admin', 'super_admin'])
      );
      allow delete: if isSuperAdmin();
    }
    
    // Rules for the 'alumni' collection
    match /alumni/{alumnusId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'alumniOpportunities' collection
    match /alumniOpportunities/{opportunityId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'leadership' collection
    match /leadership/{leaderId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'announcements' collection
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'projects' collection
    match /projects/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update, delete: if isAdmin();
    }

    // Rules for the 'resources' collection
    match /resources/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update, delete: if isAdmin();
    }

    // Rules for the 'opportunities' collection
    match /opportunities/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update, delete: if isAdmin();
    }

    // Rules for the 'blogPosts' collection
    match /blogPosts/{docId} {
      allow read: if true;
      allow create: if isMemberOrAdmin();
      allow update, delete: if isAdmin();
    }

    // Rules for the 'products' collection
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'orders' collection
    match /orders/{orderId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }

  }
}
