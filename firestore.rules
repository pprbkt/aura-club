rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user's role from the 'users' collection
    function getUserRole(email) {
      return get(/databases/$(database)/documents/users/$(email)).data.role;
    }

    function isSuperAdmin() {
      return isAuthenticated() && getUserRole(request.auth.token.email) == 'super_admin';
    }

    // Helper function to check if the user is an admin
    function isAdmin() {
      return isAuthenticated() && (getUserRole(request.auth.token.email) == 'admin' || isSuperAdmin());
    }
    
    // Helper function to check if the user is a member or admin
    function isMemberOrAdmin() {
      return isAuthenticated() && (getUserRole(request.auth.token.email) == 'member' || isAdmin());
    }

    // Rules for the 'users' collection
    match /users/{email} {
      allow read: if isAdmin() || (isAuthenticated() && request.auth.token.email == email);
      allow create: if isAuthenticated();
      allow update: if isSuperAdmin() || (isAdmin() && (resource.data.role == 'member' || resource.data.role == 'user')) || (isAuthenticated() && request.auth.token.email == email);
    }
    
    // Rules for the 'alumni' collection
    match /alumni/{alumnusId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'alumniOpportunities' collection
    match /alumniOpportunities/{opportunityId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'leadership' collection
    match /leadership/{leaderId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'announcements' collection
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Rules for the 'projects' collection
    match /projects/{docId} {
      allow get: if resource.data.status == 'approved';
      allow list: if resource.data.status == 'approved';
      allow read: if isMemberOrAdmin() && (resource.data.authorEmail == request.auth.token.email || isAdmin());
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'resources' collection
    match /resources/{docId} {
      allow get: if resource.data.status == 'approved';
      allow list: if resource.data.status == 'approved';
      allow read: if isMemberOrAdmin() && (resource.data.authorEmail == request.auth.token.email || isAdmin());
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'opportunities' collection
    match /opportunities/{docId} {
      allow get: if resource.data.status == 'approved';
      allow list: if resource.data.status == 'approved';
      allow read: if isMemberOrAdmin() && (resource.data.authorEmail == request.auth.token.email || isAdmin());
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'blogPosts' collection
    match /blogPosts/{docId} {
      allow get: if resource.data.status == 'approved';
      allow list: if resource.data.status == 'approved';
      allow read: if isMemberOrAdmin() && (resource.data.authorEmail == request.auth.token.email || isAdmin());
      allow create: if isMemberOrAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for the 'shop_products' collection
    match /shop_products/{productId} {
      allow read: if true; // Everyone can view products
      allow create, update, delete: if isAdmin(); // Only admins can manage products
    }

    // Rules for the 'shop_orders' collection
    match /shop_orders/{orderId} {
      allow create: if isAuthenticated(); // Users can create orders
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isAdmin(); // Only admins can manage orders
    }

  }
}
